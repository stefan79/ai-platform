{
  "root": true,
  "ignorePatterns": ["dist", ".nx", "coverage"],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.base.json"],
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint", "react", "react-hooks", "jsx-a11y", "ai-platform"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    {
      "files": ["apps/server-core/src/event/strategies/**/*.ts"],
      "rules": {
        "ai-platform/require-event-definitions": "error"
      }
    }
  ]
}
