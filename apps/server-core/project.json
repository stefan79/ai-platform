{
  "name": "server-core",
  "root": "apps/server-core",
  "sourceRoot": "apps/server-core/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/server-core"],
      "options": {
        "command": "pnpm exec tsc -p apps/server-core/tsconfig.app.json"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=development TS_NODE_PROJECT=apps/server-core/tsconfig.app.json pnpm exec ts-node-dev --respawn -r tsconfig-paths/register apps/server-core/src/main.ts",
        "env": {
          "KAFKA_BROKERS": "localhost:9092",
          "KAFKA_CLIENT_ID": "ai-platform-server-core",
          "KAFKA_GROUP_ID": "ai-platform-server-core-v2",
          "KAFKA_COMMANDS_TOPIC": "ai-platform-commands",
          "KAFKA_COMMANDS_GROUP_ID": "ai-platform-server-core-commands",
          "KAFKA_EVENTS_TOPIC": "ai-platform-events",
          "KAFKA_OUTBOX_TOPIC": "ai-platform-outbox",
          "KAFKA_DEAD_LETTER_TOPIC": "ai-platform-dead-letter",
          "AWS_ACCESS_KEY_ID": "local",
          "AWS_SECRET_ACCESS_KEY": "local",
          "AWS_REGION": "us-east-1",
          "DYNAMODB_ENDPOINT": "http://localhost:8000",
          "DYNAMODB_DOMAIN_TABLE": "ai-platform-domain-events",
          "DYNAMODB_OUTBOX_TABLE": "ai-platform-outbox"
        }
      }
    },
    "serve:prod": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/apps/server-core/main.js"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec eslint \"apps/server-core/src/**/*.{ts,tsx}\""
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec jest --config apps/server-core/jest.config.ts"
      }
    }
  }
}
